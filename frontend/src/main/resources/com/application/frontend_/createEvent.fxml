<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox fx:id="system" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.frontend_.CreateEventController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;" VBox.vgrow="ALWAYS">

            <Label layoutX="14.0" layoutY="14.0" prefHeight="47.0" prefWidth="353.0" text="LookAndFind">
                <font>
                    <Font size="32.0" />
                </font>
                <textFill>
                    <RadialGradient centerX="0.47551019571764463" centerY="0.5" radius="0.6623931589864362">
                        <stops>
                            <Stop>
                                <color>
                                    <Color red="0.8421900272369385" />
                                </color>
                            </Stop>
                            <Stop offset="0.9999999755038631">
                                <color>
                                    <Color />
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                </color>
                            </Stop>
                        </stops>
                    </RadialGradient>
                </textFill>
            </Label>

            <Label alignment="CENTER" layoutX="211.0" layoutY="75.0" prefHeight="47.0" prefWidth="390.0" text="Vytvor vlastnú udalosť">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>

            <Label fx:id="nazovText" layoutX="135.0" layoutY="148.0" prefHeight="21.0" prefWidth="100.0" text="Názov udalosti">
                <font>
                    <Font name="System Bold" size="13.29230785369873" />
                </font>
            </Label>
            <TextField fx:id="name" layoutX="135.0" layoutY="170.0" prefHeight="30.0" prefWidth="227.0" promptText="Zraz kyselinárov" />


            <Label fx:id="emailText" layoutX="135.0" layoutY="206.0" prefHeight="21.0" prefWidth="227.0" text="Maximálny počet úastníkov">
                <font>
                    <Font name="System Bold" size="13.29230785369873" />
                </font>
            </Label>
            <TextField fx:id="maxParticipants" layoutX="135.0" layoutY="228.0" prefHeight="30.0" prefWidth="227.0" promptText="10" />


            <Label fx:id="timePickerText" layoutX="135.0" layoutY="264.0" prefHeight="21.0" prefWidth="58.0" text="Čas">
                <font>
                    <Font name="System Bold" size="13.29230785369873" />
                </font>
            </Label>
            <TextField fx:id="time" layoutX="135.0" layoutY="285.0" prefHeight="30.0" prefWidth="227.0" promptText="Zadajte čas" />


            <Label fx:id="datePickerText" layoutX="135.0" layoutY="323.0" text="Dátum konania">
                <font>
                    <Font name="System Bold" size="13.29230785369873" />
                </font>
            </Label>
            <DatePicker fx:id="date" layoutX="135.0" layoutY="345.0" prefHeight="30.0" prefWidth="227.0" promptText="25.10.2022" />


            <Label fx:id="popisText" layoutX="431.0" layoutY="146.0" text="Popis">
                <font>
                    <Font name="System Bold" size="13.29230785369873" />
                </font>
            </Label>
            <TextField fx:id="description" alignment="TOP_LEFT" layoutX="428.0" layoutY="170.0" prefHeight="84.0" prefWidth="227.0" promptText="Všetci ste vítaní" />


            <Button fx:id="createEventButton" layoutX="293.0" layoutY="466.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="227.0" style="-fx-background-color: #000066; -fx-cursor: hand;" text="Vytvoriť udalosť" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="13.29230785369873" />
                </font>
            </Button>

             <Button fx:id="addPhotoButton" layoutX="429.0" layoutY="264.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="227.0" style="-fx-background-color: #000066; -fx-cursor: hand;" text="Pridať fotku" textFill="WHITE">
                <font>
                   <Font name="System Bold" size="13.29230785369873" />
                </font>
             </Button>

            <ImageView fx:id="eventImage" fitHeight="130.0" fitWidth="227.0" layoutX="429.0" layoutY="308.0" pickOnBounds="true" preserveRatio="true" />

             <Button fx:id="backButton" layoutX="678.0" layoutY="22.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="96.0" style="-fx-background-color: #000066; -fx-cursor: hand;" text="Späť" textFill="WHITE">
                <font>
                   <Font name="System Bold" size="13.0" />
                </font>
             </Button>
        </AnchorPane>
    </children>
</VBox>
